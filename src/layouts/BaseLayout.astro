---
interface Props {
  title: string
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <slot name="head">
      <meta name="description" content="Yixuan Wang's homepage.">
    </slot>
  </head>
  <body class="h-[100svh] w-[100svw] overflow-x-hidden py-12 px-4 lg:px-12 flex flex-col justify-stretch items-center">
    <slot />
  </body>
</html>

<style is:global>
html {
  @apply bg-accent-100 @dark:bg-accent-900 text-plain;
}

html {
  scrollbar-gutter: stable;
  scrollbar-width: thin;
}

p a {
  @apply text-accent-600 @dark:text-accent-400 @hover:text-accent-500 border-b-1 border-dotted border-accent-600 @dark:border-accent-400 @hover:border-accent-500 @hover:border-solid;
}
</style>